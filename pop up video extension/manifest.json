{
  "manifest_version": 3,
  "name": "Video Picture-in-Picture",
  "version": "1.1",
  "description": "Convert any video on a webpage into Picture-in-Picture mode with a shortcut (Alt+P).",
  "permissions": ["activeTab", "scripting", "commands"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-pip": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Toggle Picture-in-Picture for the active video"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
